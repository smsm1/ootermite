<h1>Reports Available</h1>
<table>
  <tr>
    <th>Name</th>
    <th>Parameters</th>
    <th colspan=2>Action</th>
  </tr>
<% @reports.each do |report| %>
  <tr>
    <td><%= link_to(h(report.title), report_path(report)) %></td>
    <td><%= h report.net_inputs.join(", ") %></td>
    <td><%= link_to 'Edit', edit_report_path(report) %></td>
    <td><%= link_to 'Destroy', report_path(report), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<%= link_to 'New Report', new_report_path %>
